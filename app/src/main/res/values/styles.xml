<resources>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item> 
        <item name="colorPrimaryDark">@color/primary_dark</item> 
        <item name="colorControlHighlight">@color/accent_translucent</item> 
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:src">@drawable/ic_add_black</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="tweetName">
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:shadowColor">#44000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="tweetText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorLink">#778085</item>
    </style>

    <style name="tweetDate">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFAAAAAA</item>
    </style>

    <style name="About">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#eff0f1</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/mian_bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="compare_detail_right_item_font_style">
        <item name="android:layout_width">@dimen/compare_detail_right_item_width</item>
        <item name="android:layout_height">@dimen/compare_detail_item_height</item>
        <item name="android:textColor">@color/compare_detail_label_check_detail_color</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="compare_detail_right_label_layout_style">
        <item name="android:layout_width">@dimen/compare_detail_right_item_width</item>
        <item name="android:layout_height">@dimen/compare_detail_right_title_height</item>
        <item name="android:paddingTop">@dimen/default_margin</item>
        <item name="android:paddingBottom">@dimen/default_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="compare_detail_right_label_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="compare_detail_right_label_check_detail_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/compare_detail_label_check_detail_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
