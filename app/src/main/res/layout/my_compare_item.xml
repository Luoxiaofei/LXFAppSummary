<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/right_item_textview0"
        android:layout_width="@dimen/compare_detail_left_item_width"
        android:layout_height="@dimen/compare_detail_item_height"
        android:background="@color/compare_detail_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_margin"
        android:textSize="@dimen/dimen_14" />

    <com.appsummary.luoxf.myappsummary.recyclerView.comparelist.view.CHScrollView
        android:id="@+id/item_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">


            <include layout="@layout/ver_span_line" />

            <TextView
                android:id="@+id/right_item_textview1"
                style="@style/compare_detail_right_item_font_style" />

            <include layout="@layout/ver_span_line" />

            <TextView
                android:id="@+id/right_item_textview2"
                style="@style/compare_detail_right_item_font_style" />

            <include layout="@layout/ver_span_line" />

            <TextView
                android:id="@+id/right_item_textview3"
                style="@style/compare_detail_right_item_font_style" />

            <include layout="@layout/ver_span_line" />

            <TextView
                android:id="@+id/right_item_textview4"
                style="@style/compare_detail_right_item_font_style" />

            <include layout="@layout/ver_span_line" />

            <TextView
                android:id="@+id/right_item_textview5"
                style="@style/compare_detail_right_item_font_style" />
        </LinearLayout>
    </com.appsummary.luoxf.myappsummary.recyclerView.comparelist.view.CHScrollView>


</LinearLayout>